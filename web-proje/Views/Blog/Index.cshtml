@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<section class="main-content-w3layouts-agileits">
    <div class="container">
        
        <div class="row inner-sec">
            <!--left-->
            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                <div class="row mb-4">
                    @foreach (var item in Model)
                    {
                    <div class="col-md-6 card">
                        <a href="/Blog/BlogReadAll/@item.BlogID/">
                            <img src="@item.BlogImage" class="card-img-top img-fluid" alt="">
                        </a>
                        <div class="card-body">
                            <ul class="blog-icons my-4">
                                <li>
                                    <a href="#">
                                        <i class="far fa-calendar-alt" style="color:rebeccapurple"></i> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))
                                    </a>
                                </li>
                               
                                <li>
                                    <a href="#">
                                        <i class="fas fa-eye" style="color:rebeccapurple"></i> @item.Category.CategoryName
                                    </a>
                                </li>

                            </ul>
                            <h5 class="card-title ">
                                <a href="/Blog/BlogReadAll/@item.BlogID/">@item.BlogTitle</a>
                            </h5>
                            <p class="card-text mb-3">@item.BlogContent.Substring(0,item.BlogContent.Substring(0,150).LastIndexOf(" "))... </p>
                            <a href="/Blog/BlogReadAll/@item.BlogID/" class="btn btn-secondary read-m" style="color:white">Devamını Oku</a>
                        </div>
                    </div>
                    }

                </div>
                
            </div>
            <!--//left-->
            <!--right-->
            <aside class="col-lg-4 agileits-w3ls-right-blog-con text-left">
                <div class="right-blog-info text-left">

                    @await Component.InvokeAsync("CategoryList")

                    <br />
                    <br />
                    <br />

                    <div class="tech-btm">
                        <img src="~/BlogTema/images/mail.jpg" class="card-img-top img-fluid" alt="">
                    </div>

                    <h4>Maille Bize Ulaşın</h4>
                    @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")
                    <br />
                    <br />
                    <br />

                    @await Html.PartialAsync("~/Views/About/SocialMediaAbout.cshtml")

                </div>
            </aside>
            <!--//right-->
        </div>
    </div>
</section>
